<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        mc:Ignorable="d"
        Title="FlightGear desktop simulator" Height="550" Width="900">

    <DockPanel>
        <TextBlock DockPanel.Dock="Top" FontWeight="Bold" FontSize="50"  Foreground="DarkBlue" HorizontalAlignment="Center"> Flight Simulator</TextBlock>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
                <local:Left DockPanel.Dock="Right" Grid.Column="0" Margin="5"/>
                <local:Right  DockPanel.Dock="Left" Grid.Column="1" Margin="5"/>
        </Grid>
    </DockPanel>

</Window>
